mixin offers

  - var oflist = [{class:'', src:'img/svg/icon-cat-slim.svg', title:'Похудение', text:'Ваш кот весит больше собаки и почти утратил способность лазить по деревьям? Пора на диету! Cat Energy Slim поможет вашему питомцу сбросить лишний вес.', btnText:'Каталог slim', iclass:''},{class:'offers__item-content--pro', src:'img/svg/icon-cat-pro.svg', title:'Набор массы', text:'Заработать авторитет среди дворовых котов и даже собак? Серия Cat Energy Pro поможет вашему коту нарастить необходимые мышцы!', btnText:'Каталог pro', iclass:'offers__icon-img--pro'}];

  .offers
    .container
      .offers__wrap
        each link in oflist
          .offers__item
            .offers__item-wrap
              .offers__item-title
                .offers__item-title-icon
                  .offers__icon-circle
                  IMG.offers__icon-img(src= link.src class= link.iclass)
                H3.offers__item-title-name= link.title
              P.offers__item-content(class= link.class)= link.text
              +btn({href:"#"})(class = "offers__btn")= link.btnText
                .offers__btn-arrow


