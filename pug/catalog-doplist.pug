mixin catalog-doplist
  
  include catalog-dopitem
  include btn

  - var doplist = [{_title:'Сахарозаменитель', _amount:'1 Упаковка', _value:'100 р.', _priceClass:'catalog-dopitem__price-value--small'}, {_title:'Питьевая вода', _amount:'5 литров', _value:'50 р.'}, {_title:'Молоко', _amount:'1 литр', _value:'100 р.'}, {_title:'Витамины', _amount:'1 упаковка (30 г)', _value:'300 р.', _itemClass:'catalog-dopitem--border-bottom'}];
  
  .catalog-doplist

    .container

      H3.catalog-doplist__title
        | Дополнительные товары

      .catalog-doplist__wrap
        .catalog-doplist__list

          each link in doplist
            +catalog-dopitem({title:link._title, amount:link._amount, value:link._value, itemClass:link._itemClass, priceClass:link._priceClass})

        .catalog-doplist__gift
          .catalog-doplist__gift-wrap
            IMG.catalog-doplist__gift-icon(src='img/svg/icon-gift.svg' width=56 height=61)
            P.catalog-doplist__gift-text
              SPAN.catalog-doplist__text-top
                |  Закажите все
              SPAN.catalog-doplist__text-bottom
                |  и получите чехол для кота в подарок!

